{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/types/**/*.d.ts"],
  "exclude": ["node_modules", "dist", "src/views/StarterPage.vue", "src/views/test.vue"],
  "compilerOptions": {
    "module": "ESNext",
    "ignoreDeprecations": "5.0",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node"],
    "allowJs": true
  },

  "references": [
    {
      "path": "./tsconfig.vite-config.json"
    }
  ]
}
